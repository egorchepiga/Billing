<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egorchepiga.billingv2">

    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.egorchepiga.billingv2.Support"></activity>
        <activity android:name="com.egorchepiga.billingv2.AddRepair"></activity>
        <activity android:name="com.egorchepiga.billingv2.Repair"></activity>
        <activity android:name="com.egorchepiga.billingv2.AddPayment"></activity>
        <activity android:name="com.egorchepiga.billingv2.AddService"></activity>
        <activity android:name="com.egorchepiga.billingv2.Change"></activity>
        <activity android:name="com.egorchepiga.billingv2.MainScreen"></activity>
        <activity android:name="com.egorchepiga.billingv2.Login"></activity>
        <activity android:name="com.egorchepiga.billingv2.NavigationView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
