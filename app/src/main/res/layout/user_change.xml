<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/Usernametxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameedit"
        android:layout_below="@+id/Usernametxt"
        android:layout_alignEnd="@+id/passwordtxt"
        android:layout_alignStart="@+id/oldpasswordtxt"
        android:allowUndo="false"
        android:autoText="false"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Old password"
        android:id="@+id/oldpasswordtxt"
        android:layout_below="@+id/usernameedit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New password"
        android:id="@+id/passwordtxt"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/oldpasswordtxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newpasswordedit"
        android:layout_below="@+id/passwordtxt"
        android:layout_alignEnd="@+id/passwordtxt"
        android:layout_alignStart="@+id/passwordtxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/oldpasswordedit"
        android:layout_below="@+id/oldpasswordtxt"
        android:layout_alignStart="@+id/oldpasswordtxt"
        android:layout_alignEnd="@+id/passwordtxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/button5"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="ChangeBtn" />
</RelativeLayout>