<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_payment_card"
            android:layout_alignParentTop="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_age"
            android:layout_below="@+id/id_payment_card"
            android:text="Стоимость:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/costCard"
            android:layout_alignBaseline="@+id/person_age"
            android:layout_alignBottom="@+id/person_age"
            android:layout_toEndOf="@+id/person_age" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Период действия: "
            android:id="@+id/textView18"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/person_age"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/periodCard"
            android:layout_alignTop="@+id/textView18"
            android:layout_toEndOf="@+id/textView18"
            android:layout_marginStart="7dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
